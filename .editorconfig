# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
tab_width = 2
indent_size = 2
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

# JetBrains Specific things
ij_continuation_indent_size = 2
ij_smart_tabs = true
ij_visual_guides = 120
ij_wrap_on_typing = false

[{*.cjs,*.js,*.jsx,*.ats,*.cts,*.mts,*.ts,*.tsx}]
max_line_length = 120

[{*.markdown,*.md,*.mdx}]
trim_trailing_whitespace = false

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
max_line_length = 120
trim_trailing_whitespace = false

[{*.scss,*.css}]
max_line_length = off
indent_style = space

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc}]
max_line_length = off
indent_style = space

[{*.yaml,*.yml}]
max_line_length = off
indent_style = space
