{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "removeComments": true,
    "tsBuildInfoFile": null,
    "sourceMap": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "declarationMap": false,
    "outDir": "dist/prod",
    "paths": {
      "#root/*": ["./src/*.js"],
      "#common/*": ["./src/common/*.js"],
      "#features/*": ["./src/features/*.js"],
      "#server/*": ["./src/server/*.js"],
      "#test/*": ["./src/test/*.js"],
      "@my-org/api-common/*": ["../packages/api-common/dist/*"],
      "@my-org/models": ["../packages/models/dist"],
      "@my-org/models/*": ["../packages/models/dist/*"]
    }
  },
  "exclude": [
    "**/test",
    "**/__test__",
    "**/*.test.ts"
  ]
}